<div class="jumbotron">
    <h1>The Onion Peeler</h1>
    <p class="lead">Add comments to any of the saved articles below.</p>
    <p class="lead">Or use the navigation bar to go to the home page.</p>
</div>

<div class="all-div">
    {{#each articles}}
        <div class="article-div" >
            <h2 class="article-title">{{this.title}}</h2>
            <h3 class="article-link">{{this.link}}</h3>
            <button data-id='{{this.id}}' id='deletearticle'>Delete Article</button>
            <input id='titleinput-{{this.id}}' name='title' placeholder="New Comment Title">
            <textarea id='bodyinput-{{this.id}}' name='body' placeholder="New Comment Body"></textarea>
            <button data-id="{{this.id}}" type="submit" class="add-comment-btn">Add Comment</button>

            {{#each comments}}
            <div class="comment-div">
                <h4 class="article-title">{{this.title}}</h4>
                <p class="article-title">{{this.title}}</[]
                <input type="hidden" name="delete-comment" value="true">
                <button type="submit" class="delete-comment-btn">Delete Comment</button>
                </form>
            </div>
            {{/each}}
        </div>
    {{/each}}
</div>